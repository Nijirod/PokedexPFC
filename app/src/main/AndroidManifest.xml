<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:name=".PokedexApp"
        android:allowBackup="true"
        android:dataExtractionRules="@xml/data_extraction_rules"
        android:fullBackupContent="@xml/backup_rules"
        android:icon="@drawable/baseline_catching_pokemon_24"
        android:label="@string/app_name"
        android:roundIcon="@drawable/baseline_catching_pokemon_24"
        android:supportsRtl="true"
        android:theme="@style/Theme.Pokemon.Splash"
        tools:targetApi="31">
        <meta-data
            android:name="com.google.android.wearable.capabilities"
            android:resource="@xml/wear" />
        <activity
            android:name=".MainActivity"
            android:exported="true"
            android:theme="@style/Theme.Pokemon.Splash">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

</manifest>